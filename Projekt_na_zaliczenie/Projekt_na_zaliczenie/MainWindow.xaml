<Window x:Class="Projekt_na_zaliczenie.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Projekt_na_zaliczenie"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid Background="Gold">
        <Grid Background="Black">
        <Button x:Name="button" Content="Button" HorizontalAlignment="Left" Height="60" Margin="10" Grid.Row="1" VerticalAlignment="Top" Width="75" Grid.Column="1"/>
        <Image x:Name="image" HorizontalAlignment="Right" Source="Banery/Baner1.png" Height="100" Margin="30" Grid.Row="1" VerticalAlignment="Top" Width="100" Grid.Column="1"/>
            
        </Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" MaxHeight="300"></RowDefinition>
            <RowDefinition Height="2*"></RowDefinition>
            <RowDefinition Height="2*"></RowDefinition>
        </Grid.RowDefinitions>
    </Grid>
</Window>
